{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@base/*": [
        "src/*"
      ],
      "@api/*": [
        "src/api/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "filesGlob": [
    "**/*.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
